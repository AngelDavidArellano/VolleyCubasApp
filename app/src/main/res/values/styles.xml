<resources>

    <style name="RoundedCornerTeamImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="RoundedCornerTrainerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorPrimary">?attr/background</item>
        <item name="android:textColorPrimary">?attr/textAppearanceBody1</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:weekNumberColor">?attr/colorSecondary</item>
        <item name="android:headerYearTextAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


</resources>
