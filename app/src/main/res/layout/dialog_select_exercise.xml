<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/background">

    <!-- Barra de bÃºsqueda -->
    <EditText
        android:id="@+id/etSearchExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar ejercicio"
        android:textColor="?attr/iconTint"
        android:textColorHint="@color/light_gray_status"
        android:backgroundTint="?attr/iconTint"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView para ejercicios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExerciseGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_exercise" />
</LinearLayout>
