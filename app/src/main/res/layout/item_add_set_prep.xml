<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPrimerSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer set:"
        android:fontFamily="@font/tripsans"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:id="@+id/gridJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:rowCount="2"
        android:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrimerSet">

        <TextView
            android:id="@+id/jugador4"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="20dp"
            android:fontFamily="@font/tripsans"
            android:text="+"
            android:textAlignment="center"
            android:background="@color/light_gray_status"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/jugador3"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="20dp"
            android:fontFamily="@font/tripsans"
            android:text="+"
            android:textAlignment="center"
            android:background="@color/light_gray_status"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/jugador2"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="20dp"
            android:fontFamily="@font/tripsans"
            android:text="+"
            android:textAlignment="center"
            android:background="@color/light_gray_status"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/jugador5"
