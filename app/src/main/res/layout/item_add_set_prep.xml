            android:fontFamily="@font/tripsans"
            android:text="+"
            android:textAlignment="center"
            android:background="@color/light_gray_status"
            android:layout_margin="8dp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
