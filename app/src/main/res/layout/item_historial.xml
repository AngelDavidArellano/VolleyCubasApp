<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/bg"
    android:gravity="center_vertical">

    <!-- LÃ­nea de color -->
    <View
        android:id="@+id/color_line"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="@color/blue" /> <!-- Color predeterminado -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rival_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del equipo"
            android:textSize="18sp"
            android:textColor="@color/light_principal_text" />

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:textSize="14sp"
            android:textColor="@color/light_secondary_text" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow"
        app:tint="@color/light_icons_color" />
</LinearLayout>
