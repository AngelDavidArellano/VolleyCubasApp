<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Equipo Local -->
        <TextView
            android:id="@+id/tv_next_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Junior Negro  vs  CUVA Wolframio"
            android:textColor="@color/dark_secondary_text"
            android:textSize="18sp"
            android:fontFamily="@font/tripsans"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Fecha -->
        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/dark_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_next_match"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_next_match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07/12/2024"
            android:textColor="@color/dark_secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/tripsans"
            app:layout_constraintStart_toEndOf="@id/iv_calendar"
            app:layout_constraintTop_toTopOf="@id/iv_calendar"
            app:layout_constraintBottom_toBottomOf="@id/iv_calendar"
            android:layout_marginStart="8dp" />

        <!-- Hora -->
        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/dark_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_calendar"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_next_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textColor="@color/dark_secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/tripsans"
            app:layout_constraintStart_toEndOf="@id/iv_clock"
            app:layout_constraintTop_toTopOf="@id/iv_clock"
            app:layout_constraintBottom_toBottomOf="@id/iv_clock"
            android:layout_marginStart="8dp" />

        <!-- Localización -->
        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"
            app:tint="@color/dark_secondary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_clock"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_next_match_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los Cantos (Alcorcón) - Pista 2"
            android:textColor="@color/dark_secondary_text"
            android:textSize="14sp"
            android:fontFamily="@font/tripsans"
            app:layout_constraintStart_toEndOf="@id/iv_location"
            app:layout_constraintTop_toTopOf="@id/iv_location"
            app:layout_constraintBottom_toBottomOf="@id/iv_location"
            android:layout_marginStart="8dp" />

        <View
            android:id="@+id/iv_status_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/status_indicator_green"
            app:tint="@color/dark_secondary_text"
            android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_next_match"
            app:layout_constraintBottom_toBottomOf="@id/tv_next_match"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>