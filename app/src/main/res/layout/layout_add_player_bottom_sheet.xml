<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAddPlayerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir jugador"
        android:textSize="18sp"
        android:textColor="@color/dark_principal_text"
        android:fontFamily="@font/tripsans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPlayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre del jugador"
        android:padding="10dp"
        android:textColor="@color/dark_principal_text"
        android:textColorHint="@color/dark_secondary_text"
        android:backgroundTint="@color/dark_principal_text"
        android:fontFamily="@font/tripsans"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvAddPlayerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnSavePlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textColor="@color/dark_principal_text"
        android:backgroundTint="@color/gold"
        android:padding="10dp"
        android:fontFamily="@font/tripsans"
        app:layout_constraintTop_toBottomOf="@id/etPlayerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
