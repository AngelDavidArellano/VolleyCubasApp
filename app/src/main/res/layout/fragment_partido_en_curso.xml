<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <!-- Terreno de Juego -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_court"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/campo_blanco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_scores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        android:paddingHorizontal="65dp"
        android:paddingVertical="45dp">

        <!-- Jugador Superior Izquierda -->
        <TextView
            android:id="@+id/player4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="4"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/player4_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintTop_toBottomOf="@id/player4"
            app:layout_constraintStart_toStartOf="@id/player4"
            app:layout_constraintEnd_toEndOf="@id/player4"
            />

        <!-- Jugador Superior Centro -->
        <TextView
            android:id="@+id/player3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="3"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/player3_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintTop_toBottomOf="@id/player3"
            app:layout_constraintStart_toStartOf="@id/player3"
            app:layout_constraintEnd_toEndOf="@id/player3"
            />

        <!-- Jugador Superior Derecha -->
        <TextView
            android:id="@+id/player2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/player2_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintTop_toBottomOf="@id/player2"
            app:layout_constraintStart_toStartOf="@id/player2"
            app:layout_constraintEnd_toEndOf="@id/player2"
            />

        <!-- Jugador Inferior Izquierda -->
        <TextView
            android:id="@+id/player5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="5"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintBottom_toTopOf="@id/player5_name"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/player5_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.9"
            />

        <!-- Jugador Inferior Centro -->
        <TextView
            android:id="@+id/player6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="6"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintBottom_toTopOf="@id/player6_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/player6_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.9"
            />

        <!-- Jugador Inferior Derecha -->
        <TextView
            android:id="@+id/player1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/dark_principal_text"
            app:layout_constraintBottom_toTopOf="@id/player1_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/player1_name"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:background="?attr/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.9"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Marcadores y botones adicionales -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_scores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_court"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintHeight_percent="0.36">

        <TextView
            android:id="@+id/team_a_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Cadete Negro"
            android:textSize="18dp"
            android:textColor="?attr/textAppearanceBody1"
            android:fontFamily="@font/tripsans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/score_team_a"
            app:layout_constraintEnd_toEndOf="@id/score_team_a"
            />

        <!-- Marcador Izquierdo -->
        <TextView
            android:id="@+id/score_team_a"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_team_scoreboard"
            android:backgroundTint="@color/blue"
            android:text="00"
            android:textSize="115sp"
            android:fontFamily="@font/pixeboy"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/team_a_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.48" />

        <TextView
            android:id="@+id/team_b_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="CUVA Aguacate"
            android:textSize="18dp"
            android:textColor="?attr/textAppearanceBody1"
            android:fontFamily="@font/tripsans"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/score_team_b"
            app:layout_constraintEnd_toEndOf="@id/score_team_b"
            />

        <!-- Marcador Derecho -->
        <TextView
            android:id="@+id/score_team_b"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_team_scoreboard"
            android:backgroundTint="@color/red"
            android:text="00"
            android:textSize="115sp"
            android:fontFamily="@font/pixeboy"
            android:gravity="center"
            android:textColor="?attr/textAppearanceBody1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/team_b_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

        <!-- Botones Izquierdo -->
        <LinearLayout
            android:id="@+id/layout_left_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/score_team_a"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/timeout_button_team_a"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/pixeboy"
                android:text="0"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="?attr/textAppearanceBody1"
                android:textSize="25sp"
                android:paddingEnd="10dp"
                android:drawableTint="?attr/iconTint"
                app:drawableEndCompat="@drawable/ic_timeout" />

            <TextView
                android:id="@+id/set_team_a"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/pixeboy"
                android:text="0"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="?attr/textAppearanceBody1"
                android:textSize="25sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/undo_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_circle_arrow"
            android:backgroundTint="?attr/iconTint"
            app:layout_constraintTop_toTopOf="@id/layout_left_buttons"
            app:layout_constraintBottom_toBottomOf="@id/layout_left_buttons"
            app:layout_constraintStart_toEndOf="@id/layout_left_buttons"
            app:layout_constraintEnd_toStartOf="@id/layout_right_buttons"/>

        <!-- Botones Derecho -->
        <LinearLayout
            android:id="@+id/layout_right_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/score_team_b"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/set_team_b"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/pixeboy"
                android:text="0"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="?attr/textAppearanceBody1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/timeout_button_team_b"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_button_primary"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/pixeboy"
                android:text="0"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="?attr/textAppearanceBody1"
                android:textSize="25sp"
                android:paddingStart="10dp"
                android:drawableTint="?attr/iconTint"
                app:drawableStartCompat="@drawable/ic_timeout"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/posesionTeamA"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/layout_left_buttons"
            app:layout_constraintStart_toStartOf="@id/layout_left_buttons"
            app:layout_constraintEnd_toEndOf="@id/layout_left_buttons"
            android:src="@drawable/ic_start_match"
            app:tint="?attr/iconTint"
            />

        <ImageView
            android:id="@+id/posesionTeamB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/layout_right_buttons"
            app:layout_constraintStart_toStartOf="@id/layout_right_buttons"
            app:layout_constraintEnd_toEndOf="@id/layout_right_buttons"
            android:src="@drawable/ic_start_match"
            app:tint="@color/dark_grey"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/tv_notas"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/iconTint"
        android:hint="Escribr tus notas aquí!"
        android:textSize="18sp"
        android:fontFamily="@font/tripsans"
        app:layout_constraintTop_toBottomOf="@id/layout_scores"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:id="@+id/layout_rotar_3_saque"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_notas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvRotar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Rotar cada 3 saques?"
            android:textSize="18sp"
            android:textColor="?attr/textAppearanceBody1"
            android:fontFamily="@font/tripsans" />

        <CheckBox
            android:id="@+id/checkRotar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_finish_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terminar set"
            android:textColor="?attr/textAppearanceBody1" />

        <Button
            android:id="@+id/btn_finish_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terminar partido"
            android:textColor="?attr/textAppearanceBody1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
