<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/background">

    <!-- TÃ­tulo del equipo -->
    <TextView
        android:id="@+id/tvTeamTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Equipo 1"
        android:textColor="?attr/textAppearanceBody1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/tripsans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linea inferior-->
    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="?attr/textAppearanceBody1"
        app:layout_constraintTop_toBottomOf="@id/tvTeamTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Lista de jugadores -->
    <TextView
        android:id="@+id/tvTeamPlayers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jugador 1\nJugador 2\nJugador 3"
        android:textColor="?attr/textAppearanceBody2"
        android:textSize="14sp"
        android:fontFamily="@font/tripsans"
        app:layout_constraintTop_toBottomOf="@id/tvTeamTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
